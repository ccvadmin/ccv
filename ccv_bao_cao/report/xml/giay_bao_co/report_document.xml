<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <template id="ccv_bao_cao.giay_bao_co_document">
        <t t-call="web.external_layout">
            <div class="page" style="font-size: 14px;font-family: Times New Roman; padding-top: 20px; page-break-before: always;">
                <div class="col-xs-12" style="text-align: center; font-size: 20px;">
                    <strong>Giấy Báo Có</strong>
                </div>
                <t t-set="doc_id" t-value="doc.id"/>
                <t t-set="val" t-value="data[doc_id]"/>
                <div class="row">
                    <table class="table table-sm fixed" style="border: solid 1px;width: 100%; margin-top: 10px;">
                        <col width="12%"/>
                        <col width="12%"/>
                        <col width="12"/>
                        <col width="12%"/>
                        <col width="12%"/>
                        <col width="12%"/>
                        <col width="14%"/>
                        <col width="14%"/>
                        <tr>
                            <td style="text-align: left; vertical-align: middle;" colspan="6">
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Nguời nộp tiền: <t t-esc="val['partner_name']"/></div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Địa chỉ: <t t-esc="val['partner_address']"/></div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Lý do: <t t-esc="val['ref']"/></div>
                            </td>
                            <td style="text-align: left; vertical-align: middle;" colspan="2">
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Số: <t t-esc="val['name']"/></div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Ngày: <t t-esc="val['date']"/></div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Tài khoản: <t t-esc="val['account_debit_code']"/></div>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left; vertical-align: middle;" colspan="8">
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Số tài khoản đơn vị thụ hưởng: <strong><t t-esc="val['acc_number']"/></strong></div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Tại ngân hàng: <strong><t t-esc="val['bank_name']"/></strong></div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">
                                        <div class="col-8">Số tiền: <strong><t t-esc="val['amount_nt']"/></strong></div>
                                        <div class="col-4">Loại tiền: <t t-esc="val['currency_nt_name']"/></div>
                                </div>
                                <div class="row rowp" style="text-align: left;padding-top: 10px;">Số tiền bằng chữ: <strong><t t-esc="val['amount_label']"/></strong></div>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: center; vertical-align: middle;" colspan="2">
                                <strong>Diễn giải</strong>
                            </td>
                            <td style="text-align: center; vertical-align: middle;" colspan="2">
                                <strong>Số tiền nguyên tệ (<t t-esc="val['currency_nt_name']"/>)</strong>
                            </td>
                            <td style="text-align: center; vertical-align: middle;" colspan="2">
                                <strong>Số tiền (<t t-esc="val['currency_name']"/>)</strong>
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                                <strong>Ghi nợ</strong>
                            </td>
                            <td style="text-align: center; vertical-align: middle;">
                                <strong>Ghi có</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-start" style="vertical-align: middle;" colspan="2">
                                <t t-esc="val['ref']"/>
                            </td>
                            <td class="text-center" style="vertical-align: middle;" colspan="2">
                                <t t-esc="val['amount_nt']"/>
                            </td>
                            <td class="text-center" style="vertical-align: middle;" colspan="2">
                                <t t-esc="val['amount']"/>
                            </td>
                            <td class="text-center" style="vertical-align: middle;">
                                <t t-esc="val['account_debit_code']"/>
                            </td>
                            <td class="text-center" style="vertical-align: middle;">
                                <t t-esc="val['account_credit_code']"/>
                            </td>
                        </tr>
                        <t t-if="val['currency_rate'] &gt; 0">
                            <tr>
                                <td style="text-align: left; vertical-align: middle;" colspan="8">
                                    Tỷ giá quy đổi: <t t-esc="val['currency_rate']"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                </div>
                <div class="row rowp" style="padding-top: 10px; margin-left: 2px;text-align: center;">
                    <div class="col-3">
                        <span>
                            <strong>Giám đốc</strong>
                        </span>
                        <br/>
                        <span>(Ký, họ tên, đóng dấu)</span>
                    </div>
                    <div class="col-3">
                        <span>
                            <strong>Kế toán trưởng</strong>
                        </span>
                        <br/>
                        <span>(Ký, họ tên)</span>
                    </div>
                    <div class="col-2">
                        <span>
                            <strong>Người lập phiếu</strong>
                        </span>
                        <br/>
                        <span>(Ký, họ tên)</span>
                    </div>
                    <div class="col-2">
                        <span>
                            <strong>Người nộp tiền</strong>
                        </span>
                        <br/>
                        <span>(Ký, họ tên)</span>
                    </div>
                    <div class="col-2">
                        <span>
                            <strong>Thủ quỹ</strong>
                        </span>
                        <br/>
                        <span>(Ký, họ tên)</span>
                    </div>
                </div>
            </div>
        </t>
    </template>
</data>
</odoo>
