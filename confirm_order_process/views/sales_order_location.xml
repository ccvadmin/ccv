<odoo>
    <record id="sales_order_location_tree_view" model="ir.ui.view">
        <field name="name">sales.order.location.view.tree</field>
        <field name="model">sales.order.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="display_name"/>
                <field name="latitude"/>
                <field name="longitude"/>
            </tree>
        </field>
    </record>
    <record id="sales_order_location_form_view" model="ir.ui.view">
        <field name="name">sales.order.location.view.form</field>
        <field name="model">sales.order.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <div class="oe_title">
                    <label for="display_name"/>
                    <h1><field name="display_name" readonly="1"/></h1>
                </div>
                <group>
                    <field name="vehicle_number"/>
                    <field name="url" widget="CopyClipboardChar"/>
                    <field name="latitude"/>
                    <field name="longitude"/>
                </group>
                <notebook>
                    <page string="Vị trí" name='location'>
                        <field name="line_ids" readonly="1" default_order="date desc">
                            <tree>
                                <field name="date"/>
                                <field name="latitude"/>
                                <field name="longitude"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sales_order_location_action" model="ir.actions.act_window">
        <field name="name">Theo dõi vị trí</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sales.order.location</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context"></field>
    </record>
</odoo>