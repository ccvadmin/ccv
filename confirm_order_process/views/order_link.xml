<odoo>
    <!-- order_link_tree_view inherit form view -->
    <record id="order_link_tree_view" model="ir.ui.view">
        <field name="name">order.link.view.tree</field>
        <field name="model">order.link</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
                <field name="url"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- order_link_tree_view inherit form view -->
    <record id="order_link_form_view" model="ir.ui.view">
        <field name="name">order.link.view.form</field>
        <field name="model">order.link</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type='object' string='Hủy' name='action_expired_link' groups="confirm_order_process.group_sales_confirm_order_manager,sales_team.group_sale_salesman"/>
                    <field name="state" widget="statusbar" class="o_field_statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <field name="name" placeholder="e.g."/>
                        </h1>
                    </div>
                    <group>
                        <field name="type"/>
                        <field name="url" widget="CopyClipboardChar"/>
                    </group>
                    <group>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="has_location" invisible="1"/>
                        <field name="sale_order_name" attrs="{'invisible': [('sale_order_id','=','False')]}"/>
                        <field name="location_id" attrs="{'invisible': [('has_location','=','False')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- order.link search view -->
    <record id="order_link_view_search" model="ir.ui.view">
        <field name="name">order.link.view.search</field>
        <field name="model">order.link</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <filter string="Đơn hàng" name="sale_order_name" context="{'group_by': 'sale_order_name'}"/>
                <filter string="Loại" name="type" context="{'group_by': 'type'}"/>
            </search>
        </field>
    </record>
    <!-- model.name action window -->
    <record id="order_link_action" model="ir.actions.act_window">
        <field name="name">Đường dẫn xác nhận</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">order.link</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_sale_order_name': 1,'search_default_type': 1}</field>
    </record>
</odoo>
