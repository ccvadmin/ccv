<odoo>
    <template id="order_confirmation_template">
        <link rel="stylesheet" href="/confirm_order_process/static/src/css/bootstrap.min.css"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <style>
            #template.container *{
                font-family: 'Times New Roman', Times, serif;
                font-size: 16px;
            }
            table {
                table-layout: auto;
                width: 100%;
            }

            @media (max-width: 800px) {
                table {
                    width: 100%;
                }
                td, th {
                    white-space: nowrap;
                }
            }

        </style>
        <div id="template" class="container" style="margin: 40px auto;">
            <div class="text-center">
                <img class="img" height="120px" t-att-src="image_data_uri(logo)" alt="Logo"/>
            </div>
            <div class="mt-4">
                <div class="text-center m-4">
                    <h3 class="font-weight-bold" style="font-size:26px;">XÁC NHẬN ĐƠN HÀNG</h3>
                </div>
                <div class="row">
                    <div class="col-md-2 col-12">
                        <p>Đơn hàng:</p>
                    </div>
                    <div class="col-md-10 col-12">
                        <p class="font-weight-bold"><t t-esc="order_id"/></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-12">
                        <p>Tên khách hàng:</p>
                    </div>
                    <div class="col-md-10 col-12">
                        <p class="font-weight-bold"><t t-esc="customer_name"/></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-12">
                        <p>Địa chỉ:</p>
                    </div>
                    <div class="col-md-10 col-12">
                        <p class="font-weight-bold"><t t-esc="address"/></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-12">
                        <p>Số điện thoại:</p>
                    </div>
                    <div class="col-md-10 col-12">
                        <p class="font-weight-bold"><t t-esc="phone"/></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 col-12">
                        <p>Tổng giá trị đơn hàng:</p>
                    </div>
                    <div class="col-md-10 col-12">
                        <p class="font-weight-bold"><t t-esc="total_amount"/></p>
                    </div>
                </div>

                <div class="mt-4">
                    <h5 class="text-center font-weight-bold" style="font-size: 20px;text-transform: uppercase;">Sản phẩm đã đặt</h5>
                    <div class="table-responsive" style="overflow-x: auto;">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">Tên sản phẩm</th>
                                    <th class="text-center">ĐVT</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-center">Đơn giá</th>
                                    <th class="text-center">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="products" t-as="line">
                                    <tr>
                                        <td><t t-esc="line['name']"/></td>
                                        <td class="text-center"><t t-esc="line['product_uom']"/></td>
                                        <td class="text-center"><t t-esc="line['quantity']"/></td>
                                        <td class="text-center"><t t-esc="line['price_unit']"/></td>
                                        <td class="text-center"><t t-esc="line['price_subtotal']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <t t-if="status">
                <form t-att-action="'/public/order/confirm-order?token=' + token" method="post" onsubmit="return validateForm()">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    
                    <div class="row align-items-center mt-4">
                        <div class="col-md-2 col-12">
                            <label for="otp">OTP:</label>
                        </div>
                        <div class="col-md-10 col-12">
                            <input type="text" name="otp" id="otp" class="form-control"/>
                        </div>
                    </div>
                    
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary">Xác nhận đơn hàng</button>
                    </div>
                </form>
            </t>
            <script>
                const form = document.querySelector('form');
                const pathname = window.location.pathname;
                const current_url = window.location.search;
                const tokenValue = pathname+current_url
                if (tokenValue) {
                    form.action = tokenValue;
                } else {
                    console.log('No token parameter found.');
                }

                function validateForm() {
                    var otp = document.getElementById('otp').value;
                    if (otp.trim() === '') {
                        alert('Vui lòng nhập mã OTP!');
                        return false;
                    }
                    return true;
                }
            </script>
        </div>
        <script src="/confirm_order_process/static/src/js/jquery-3.3.1.slim.min.js"/>
        <script src="/confirm_order_process/static/src/js/popper.min.js"/>
        <script src="/confirm_order_process/static/src/js/bootstrap.min.js"/>
    </template>
</odoo>
