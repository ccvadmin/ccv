<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_user_ip_history_tree" model="ir.ui.view">
        <field name="name">user.ip.history.tree</field>
        <field name="model">user.ip.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="timestamp"/>
            </tree>
        </field>
    </record>

    <record id="action_user_ip_history" model="ir.actions.act_window">
        <field name="name">Lịch sử IP người dùng</field>
        <field name="res_model">user.ip.history</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="view_user_ip_history_daily_tree" model="ir.ui.view">
        <field name="name">user.ip.history.daily.tree</field>
        <field name="model">user.ip.history.daily</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="count"/>
                <button name="action_show_history" string='Xem chi tiết' type="object" class="oe_stat_button" icon="fa-globe icon"/>
            </tree>
        </field>
    </record>
    <record id="action_user_ip_history_daily" model="ir.actions.act_window">
        <field name="name">Lịch sử IP người dùng (Tổng hợp)</field>
        <field name="res_model">user.ip.history.daily</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
