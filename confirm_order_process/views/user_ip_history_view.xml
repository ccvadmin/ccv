<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_user_ip_history_daily_tree" model="ir.ui.view">
        <field name="name">user.ip.history.daily.tree</field>
        <field name="model">user.ip.history.daily</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_ip"/>
                <field name="date"/>
                <field name="count"/>
            </tree>
        </field>
    </record>

    <record id="action_user_ip_history_daily" model="ir.actions.act_window">
        <field name="name">Lịch sử IP người dùng (Tổng hợp)</field>
        <field name="res_model">user.ip.history.daily</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_user_ip_history_daily"
              name="Lịch sử IP người dùng (Tổng hợp)"
              parent="sale.menu_sale_order"
              action="action_user_ip_history_daily"
              groups="base.group_system"/>
</odoo>
